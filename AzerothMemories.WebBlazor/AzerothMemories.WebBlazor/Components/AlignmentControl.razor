    <MudElement Style="flex: 0 0 auto;">
        @Left
    </MudElement>
    <MudElement Style="flex: 1 1 auto;">
        @Centre
    </MudElement>
    <MudElement Style="flex: 0 0 auto;">
        @Right
    </MudElement>
</MudElement>

@code
{
