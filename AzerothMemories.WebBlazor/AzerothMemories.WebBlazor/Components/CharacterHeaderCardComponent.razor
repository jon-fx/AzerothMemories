@if (CharacterViewModel == null)
{

}
else
{
    <MudCard Class="pa-2 ma-2 card" Outlined="true" Elevation="10">
        <MudCardHeader>
            <CardHeaderAvatar>
                <MudAvatar Size="Size.Large" Image="@CharacterViewModel.AvatarLinkWithFallBack">@CharacterViewModel.Name[0]</MudAvatar>
            </CardHeaderAvatar>
            <CardHeaderContent>
                <CharacterNameLinkComponent CharacterName="@CharacterViewModel.Name"
                                            CharacterClass="@CharacterViewModel.Class"
                                            CharacterRealmId="@CharacterViewModel.RealmId"
                                            CharacterRegionInfo="@CharacterViewModel.RegionId.ToInfo()"/>

                <RealmLinkComponent BlizzardRealmId="@CharacterViewModel.RealmId"/>
                
                <MudText Class="d-inline">@CharacterViewModel.Level</MudText>
                <CharacterRaceComponent Class="d-inline" CharacterRace="@CharacterViewModel.Race"/>
                <CharacterClassComponent Class="d-inline" CharacterClass="@CharacterViewModel.Class"/>
            </CardHeaderContent>
            <CardHeaderActions>
                <MudIconButton Icon="@Icons.Material.Filled.Settings" Color="Color.Default" />
            </CardHeaderActions>
        </MudCardHeader>
        <MudCardContent>

        </MudCardContent>
        <MudCardActions>
            <MudButtonGroup OverrideStyles="true" Class="pa-0 ma-2" Variant="Variant.Filled">

            </MudButtonGroup>
        </MudCardActions>
    </MudCard>
}

@code {
    [Parameter, EditorRequired] public IMoaServices Services { get; init; }

    [Parameter, EditorRequired] public CharacterViewModel CharacterViewModel { get; init; }
}
