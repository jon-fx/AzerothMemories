<MudCardHeader Class="pa-0">
    <CardHeaderAvatar>
        <MudAvatar Size="Size.Small" Image="@Result.Avatar" Square="true">@Result.Name[0]</MudAvatar>
    </CardHeaderAvatar>
    <CardHeaderContent>
        @if (Result.Type == MainSearchType.Account)
        {
            var region = BlizzardRegionInfo.AllById[Result.RealmId];

            <MudText>@Result.Name</MudText>
            <MudText Typo="@Typo.caption" Inline="true">@region.TwoLettersUpper-Account</MudText>
        }
        else if (Result.Type == MainSearchType.Character)
        {
            <MudText Class=@($"wowclass-{Result.CharacterClass}")>@Result.Name</MudText>

            <RealmLinkComponent Typo="Typo.caption"
                                BlizzardRealmId="@Result.RealmId"
                                LinkDisabled="true" />
        }
        else if (Result.Type == MainSearchType.Guild)
        {
            <MudText>@Result.Name</MudText>

            <RealmLinkComponent Typo="Typo.caption"
                                BlizzardRealmId="@Result.RealmId"
                                LinkDisabled="true" />
        }
        else
        {
            throw new NotImplementedException();
        }
    </CardHeaderContent>
</MudCardHeader>

@code {
    [Parameter, EditorRequired] public MainSearchResult Result { get; init; }

    protected override bool ShouldRender()
    {
        return false;
    }
}