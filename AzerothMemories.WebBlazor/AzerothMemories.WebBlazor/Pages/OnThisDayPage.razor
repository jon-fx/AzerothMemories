@page "/on-this-day"
@inherits MoaComponentBase<OnThisDayPageViewModel>

@{
    var results = ViewModel?.Results;
    if (results == null)
    {
        <CardLoadingComponent/>
    }
    else if (results.Length == 0)
    {
        <CardErrorComponent ErrorMessage="Failed" />
    }
    else
    {
        @foreach (var year in results)
        {
            <OnThisDayHeader HeaderData="@year" NavigationManager="@NavigationManager" TimeProvider="@TimeProvider"/>
        }
    }
}