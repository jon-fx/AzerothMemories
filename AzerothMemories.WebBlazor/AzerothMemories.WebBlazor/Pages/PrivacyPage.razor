@page "/privacy-policy"

<MudCard Class="@ClassPresets.Card" Outlined="true" Elevation="10">
    <MudCardHeader Class="@ClassPresets.CardHeader">
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Privacy Policy</MudText>
        </CardHeaderContent>
    </MudCardHeader>

    <MudDivider />

    <MudCardContent Class="@ClassPresets.CardContent">
        <MudGrid>
            @foreach (var header in _lines)
            {
                <MudItem xs="12">
                    <MudText Typo="Typo.h6" Class="mud-text-secondary my-1">@header.Item1</MudText>
                    @foreach (var line in header.Item2)
                    {
                        <MudText Typo="Typo.body1" Class="mud-text-secondary my-1">@line</MudText>
                    }
                </MudItem>
            }
        </MudGrid>
    </MudCardContent>
</MudCard>

